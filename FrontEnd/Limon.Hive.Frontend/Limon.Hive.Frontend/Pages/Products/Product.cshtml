@page "{PageNumber:int?}"
@model Limon.Hive.Frontend.Pages.Products.ProductModel
@{
    ViewData["Title"] = "E-Bazaar";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">E-Bazaar</h2>
        <button class="btn btn-outline-secondary position-relative" type="button" data-bs-toggle="offcanvas" data-bs-target="#cartOffcanvas" aria-controls="cartOffcanvas">
            🛒 Cart
            @if (Model.CartItems?.Count > 0)
            {
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    @Model.CartItems.Count
                </span>
            }
        </button>
    </div>

    <div class="row mb-4">
        <div class="col-md-4 p-2">
            <div class="bg-primary text-white p-3 rounded text-center">
                <h5>Total Product: @Model.TotalProductQuatity</h5>
                <p>Warehouse has total of @Model.TotalProductQuatity today</p>
            </div>
        </div>
        <div class="col-md-4 p-2">
            <div class="bg-primary text-white p-3 rounded text-center">
                <h5>Total Vendor: 10</h5>
                <p>10 out of 10 vendors are available</p>
            </div>
        </div>
        <div class="col-md-4 p-2">
            <div class="bg-primary text-white p-3 rounded text-center">
                <h5>Unique Product: @Model.TotalProduct</h5>
                <p>There are @Model.TotalProduct types of Products Available</p>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-1">
       <form method="get" class="d-flex w-50 me-2">
        <input type="text" name="SearchQuery" value="@Model.SearchQuery" class="form-control me-2" placeholder="Search products..." />
        <button type="submit" class="btn btn-outline-primary">Search</button>
       </form>
        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addProductModal">
            Add Product
        </button>
    </div>

    <p>Showing 1-@Model.Products.Count of 10 @* @Model.TotalProduct *@ results</p>


    <!-- Product List -->
    <div class="row">
        @if (Model.Products.Count <= 0)
        {
            <p>No product available right now</p>
        }
        else
        {
            @foreach (var product in Model.Products)
            {
                var inCart = Model.CartItems?.FirstOrDefault(c => c.ProductId == product.Id);
                var isDiscounted = product.DiscountStartDate <= DateTime.Now && DateTime.Now <= product.DiscountEndDate;
                var finalPrice = isDiscounted ? product.Price - (product.Price * 0.25m) : product.Price;

                <div class="col-md-3 mb-4">
                    <div class="border p-3 rounded shadow text-center">
                        <img src="@product.ImageUrl" alt="@product.Name" class="img-fluid mb-2" style="max-height: 150px; object-fit: contain;" />
                        <h6>@product.Name</h6>
                        <p>
                            @if (isDiscounted)
                            {
                                <span class="fw-bold text-danger">$@finalPrice</span>
                                <span class="text-muted text-decoration-line-through ms-2">$@product.Price</span>
                            }
                            else
                            {
                                <span class="fw-bold">$@product.Price</span>
                            }
                        </p>
                        <form method="post" asp-page-handler="AddToCart">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <div class="d-flex align-items-center justify-content-center gap-2 mb-2">
                                <button type="button" class="btn btn-outline-secondary px-3" onclick="adjustQty(this, -1)">−</button>

                                <input type="number" name="quantity" class="form-control text-center" value="1" min="1" readonly />

                                <button type="button" class="btn btn-outline-secondary px-3" onclick="adjustQty(this, 1)">+</button>
                            </div>
                            <button class="mt-2 btn btn-sm btn-primary" type="submit">Add to Cart</button>
                        </form>
                    </div>
                </div>
            }
        }
    </div>

   @{
       int totalPages = (int)Math.Ceiling((double)Model.TotalProduct / Model.PageSize);
   }

<!-- Pagination-->
<div class="row">
    <div class="d-flex justify-content-between align-items-center">
       
        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul class="pagination mb-0">
                <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                    <a class="page-link" asp-page="/Products/Product"
                       asp-route-PageNumber="@(Model.PageNumber - 1)"
                       asp-route-PageSize="@Model.PageSize">Prev</a>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-page="/Products/Product"
                           asp-route-PageNumber="@i"
                           asp-route-PageSize="@Model.PageSize">@i</a>
                    </li>
                }

                <li class="page-item @(Model.PageNumber >= totalPages ? "disabled" : "")">
                    <a class="page-link" asp-page="/Products/Product"
                       asp-route-PageNumber="@(Model.PageNumber + 1)"
                       asp-route-PageSize="@Model.PageSize">Next</a>
                </li>
            </ul>
        </nav>

         <!-- Page Size Dropdown -->
        <form method="get" class="d-flex align-items-center">
            <label for="PageSize" class="me-2 mb-0">Items per page:</label>
            <select name="PageSize" id="PageSize" onchange="this.form.submit()" class="form-select w-auto me-3">
                <option value="5" selected="@(Model.PageSize == 5 ? "selected" : null)">5</option>
                <option value="10" selected="@(Model.PageSize == 10 ? "selected" : null)">10</option>
                <option value="25" selected="@(Model.PageSize == 25 ? "selected" : null)">25</option>
                <option value="50" selected="@(Model.PageSize == 50 ? "selected" : null)">50</option>
            </select>
            <input type="hidden" name="PageNumber" value="@Model.PageNumber" />
        </form>
    </div>
</div>
</div>


<!-- Add Product -->
<div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content border-0 rounded-3 shadow">
            <form method="post" asp-page-handler="AddProduct" enctype="multipart/form-data">
                <div class="modal-header border-0 pb-0">
                    <div>
                        <h5 class="modal-title fw-bold" id="addProductModalLabel">Add New Product</h5>
                        <p class="text-muted mb-0">Add description of your new product.</p>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="NewProduct.Name" class="form-label">Product Name</label>
                            <input asp-for="NewProduct.Name" class="form-control" placeholder="Product name" />
                        </div>

                        <div class="col-md-8">
                            <label for="Slug" class="form-label">Slug</label>
                            <div class="input-group">
                                <input type="text" asp-for="NewProduct.Slug" id="Slug" class="form-control" placeholder="product-name" />
                                <button type="button" class="btn btn-outline-secondary" onclick="generateSlug()">Generate</button>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="NewProduct.Price" class="form-label">Price</label>
                            <input asp-for="NewProduct.Price" class="form-control" placeholder="0.00" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="NewProduct.DiscountStartDate" class="form-label">Discount Start</label>
                            <input asp-for="NewProduct.DiscountStartDate" type="date" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="NewProduct.DiscountEndDate" class="form-label">Discount End</label>
                            <input asp-for="NewProduct.DiscountEndDate" type="date" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="NewProduct.Quantity" class="form-label">Quantity</label>
                            <input type="number" asp-for="NewProduct.Quantity" class="form-control" placeholder="e.g. 10" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="NewProduct.ImageUrl" class="form-label">Upload Image</label>
                            <input type="file" name="ImageFile" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="modal-footer border-0 pt-0">
                    <button type="submit" class="btn btn-primary w-100">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Cart -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="cartOffcanvas" aria-labelledby="cartOffcanvasLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="cartOffcanvasLabel">Your Cart</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        @if (Model.CartItems?.Any() == true)
        {
        decimal subtotal = 0;

        <div class="list-group mb-3">
            @foreach (var item in Model.CartItems)
            {
                var total = item.FinalPrice * item.ProductQuantity;
                subtotal += total;

                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-3">
                        <img src="@item.Product.ImageUrl" alt="@item.Product.Name" width="60" height="60" class="rounded" />
                        <div>
                            <h6 class="mb-1">@item.Product.Name</h6>
                            <small class="text-muted">Qty: @item.ProductQuantity</small>
                        </div>
                    </div>

                    <div class="text-end">
                        <div class="fw-semibold">$@total.ToString("0.00")</div>
                        <form method="post" asp-page-handler="RemoveFromCart" class="mt-1">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button class="btn btn-sm btn-outline-danger">Remove</button>
                        </form>
                    </div>
                </div>
            }
        </div>
            <div class="border-top pt-3">
                <h6 class="fw-bold">Subtotal: $@subtotal.ToString("0.00")</h6>
            </div>
        <form method="post" asp-page-handler="PlaceOrder">
            <button type="submit" class="btn btn-primary">Place Order</button>
            </form>
        }
        else
        {
            <p>Your cart is empty.</p>
        }
    </div>
</div>


@section Scripts {
    <script>
        function adjustQty(button, delta) {
            const input = button.closest("form").querySelector("input[name='quantity']");
            let current = parseInt(input.value);
            current = isNaN(current) ? 1 : current + delta;
            if (current < 1) current = 1;
            input.value = current;
        }

        function generateSlug() {
        const name = document.querySelector("input[name='NewProduct.Name']").value;
        const slugInput = document.getElementById("Slug");
        if (name) {
            slugInput.value = name.trim().toLowerCase().replace(/\s+/g, '-').replace(/[^\w\-]+/g, '');
        }
    }
    </script>
}